    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="395dp"
            android:layout_height="612dp"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="387dp"
                android:layout_height="305dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button25"
                android:layout_marginTop="18dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView58"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_above="@+id/imageView6"
                    android:layout_alignStart="@+id/imageView6"
                    android:layout_marginBottom="-31dp"
                    android:text="SELLING"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="31dp"
                    android:onClick="goToPost"
                    app:layout_constraintBottom_toBottomOf="@+id/button19"
                    app:layout_constraintEnd_toStartOf="@+id/textView36"
                    app:layout_constraintStart_toEndOf="@+id/button17"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/postedbook" />

                <TextView
                    android:id="@+id/textViewTitle1"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewShortDesc"
                    android:layout_alignStart="@+id/textViewShortDesc"
                    android:layout_alignTop="@+id/imageView6"
                    android:text="Designing Interfaces"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewShortDesc"
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="65dp"
                    android:layout_toEndOf="@+id/imageView6"
                    android:text="Jennifer Tidwell"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <TextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView59"
                    android:layout_toEndOf="@+id/imageView6"
                    android:text="$35.46"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView59"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView6"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="60dp"
                    android:text="Pending" />

                <TextView
                    android:id="@+id/textView57"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6"
                    android:text="Tyler" />

                <Button
                    android:id="@+id/button31"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewPrice"
                    android:layout_toEndOf="@+id/imageView6"
                    android:onClick="goToRateTransactions"
                    android:text="Rate item" />

                <Button
                    android:id="@+id/button33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textViewShortDesc"
                    android:layout_below="@+id/textViewPrice"
                    android:layout_marginEnd="-8dp"
                    android:onClick="goToCancelConfirmation"
                    android:text="Cancel Item" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="31dp"
                android:onClick="goToPost"
                app:layout_constraintBottom_toBottomOf="@+id/button19"
                app:layout_constraintEnd_toStartOf="@+id/textView36"
                app:layout_constraintStart_toEndOf="@+id/button17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@mipmap/algorithms_foreground" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView6"
                android:layout_centerHorizontal="true"
                android:text="Introduction to Algorithms"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewShortDesc"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView6"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="48dp"
                android:text="Charles E. Leiserson, Clifford Stein, Ronald Rivest, and Thomas H. Cormen"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textViewTitle"
                android:layout_below="@+id/textView55"
                android:text="$65.46"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="101dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/imageView6"
                android:layout_marginEnd="69dp"
                android:text="Completed on 01/10/2018" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewPrice"
                android:layout_alignStart="@+id/textViewTitle"
                android:text="Arun" />


            <Button
                android:id="@+id/button25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewPrice"
                android:layout_toEndOf="@+id/imageView6"
                android:onClick="goToRateTransactions"
                android:text="Rate Item" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_above="@+id/imageView6"
                android:layout_alignStart="@+id/imageView6"
                android:layout_marginBottom="-31dp"
                android:text="BUYING"
                android:textSize="20dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

